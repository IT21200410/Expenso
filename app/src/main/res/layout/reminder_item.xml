<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/rec_Title"
            android:text="Category"
            android:textColor="@color/chat_gradient_start"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart = "18dp"/>


        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recLang"
            android:text="amount"
            android:textColor="@color/colorSnackBarError"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/rec_Title"
            android:layout_marginTop="12dp"
            android:layout_marginStart = "120dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:id="@+id/recDesc"
            android:text="Date"
            android:textColor="@color/chat_gradient_start"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_below="@+id/rec_Title"
            android:maxLines="1"
            android:layout_marginStart = "5dp"
            android:layout_marginBottom="8dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>